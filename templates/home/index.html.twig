{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la Bibliothèque{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-4">Bienvenue sur la Bibliothèque</h1>
    <div class="row row-cols-1 row-cols-md-3">
        {% for livre in livres %}
            <div class="col mb-4">
                <div class="card">
                    {% if livre.ImageName is not null %}
                        <img src="{{ asset('img/CouvertureLivres/' ~ livre.ImageName) }}" class="card-img-top" alt="{{ livre.titre }}" style="max-width: 100%; max-height: 100%;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('details_livre', {'id': livre.id}) }}">{{ livre.titre }}</a></h5>
                        <p class="card-text">{{ livre.auteur }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}